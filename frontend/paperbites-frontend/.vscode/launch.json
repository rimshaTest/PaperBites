{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Expo",
      "request": "launch",
      "type": "node",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "expo",
        "start",
        "--no-dev",
        "--minify"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Debug in Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:19006",
      "webRoot": "${workspaceFolder}"
    }
  ]
}