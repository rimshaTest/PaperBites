      "type": "reactnative",
      "cwd": "${workspaceFolder}",
      "platform": "exponent"
    },
    {
      "name": "Debug Android",
      "request": "launch", 
      "type": "reactnative",
      "cwd": "${workspaceFolder}",
      "platform": "android"
    },
    {
      "name": "Debug iOS",
      "request": "launch",
